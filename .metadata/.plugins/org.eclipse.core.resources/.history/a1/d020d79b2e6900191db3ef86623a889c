package com.model.Dao;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.model.Client;

/**
 * Classe declarer comme Dao avec @Repository. Les differentes methodes
 * concernant le client y sont declarees : elle h√©rite de la classe
 * JpaRepository qui contient les methodes par defaut que l'application
 * utilisera : save (pour l'ajout), update (pour modifier), delete(pour
 * supprimer) et getAll(pour consulter tous les clients).
 */

@Repository
public interface IClientDao extends JpaRepository<Client, Integer> {

	/**
	 * findById permet de rechercher un client via son id.
	 */
	public Client findById(int id);

	/**
	 * findByNom permet de rechercher un client via son nom.
	 */
	public Client findByNom(String nom);

}
